FROM debian:trixie-slim
ENV DEBIAN_FRONTEND=noninteractive

RUN apt-get update \
 && apt-get install -y --no-install-recommends \
      curl \
      bash \
      mariadb-client \
      ca-certificates \
      tzdata \
 && apt-get clean \
 && rm -rf /var/lib/apt/lists/*

ARG TARGETARCH
ENV SUPERCRONIC_URL="https://github.com/aptible/supercronic/releases/download/v0.2.35/supercronic-linux-${TARGETARCH}" \
    SUPERCRONIC="supercronic-linux-${TARGETARCH}"
RUN curl -fsSLO "$SUPERCRONIC_URL" \
 && chmod +x "$SUPERCRONIC" \
 && mv "$SUPERCRONIC" /usr/local/bin/supercronic

WORKDIR /app
COPY resources/dbcleanup.sh /app/dbcleanup.sh
COPY resources/cron-entrypoint.sh /app/cron-entrypoint.sh
RUN chmod +x /app/dbcleanup.sh /app/cron-entrypoint.sh

ENTRYPOINT ["/app/cron-entrypoint.sh"]